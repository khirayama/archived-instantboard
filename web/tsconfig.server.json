{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./node_modules/@types/**/*.d.ts"
  ]
}
